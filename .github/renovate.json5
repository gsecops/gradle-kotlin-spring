{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":prHourlyLimitNone",
    ":automergeMinor",
  ],
  "stabilityDays": 14,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "\\.md$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[^\\s]+) depName=(?<depName>[^\\s]+)\\s*- (?<currentValue>[^\\s]+)"
      ],
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "groupName": "kotlin",
      "matchPackagePrefixes": [
        "org.jetbrains.kotlin:"
      ]
    },
    {
      "groupName": "dokka",
      "matchPackagePrefixes": [
        "org.jetbrains.dokka:"
      ]
    },
    {
      "groupName": "detekt",
      "matchPackagePrefixes": [
        "io.gitlab.arturbosch.detekt:"
      ]
    }
  ]
}
