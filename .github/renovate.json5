{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":prHourlyLimitNone",
    ":automergeMinor",
  ],
  "stabilityDays": 14,
  "packageRules": [
    {
      "groupName": "kotlin",
      "matchPackagePrefixes": [
        "org.jetbrains.kotlin:"
      ]
    },
    {
      "groupName": "dokka",
      "matchPackagePrefixes": [
        "org.jetbrains.dokka:"
      ]
    },
    {
      "groupName": "detekt",
      "matchPackagePrefixes": [
        "io.gitlab.arturbosch.detekt:"
      ]
    }
  ]
}
